{
  "name": "mkrelease",
  "version": "0.1.0",
  "description": "CLI tool to automate changeset-based releases",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mkrelease": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "release",
    "changeset",
    "cli",
    "automation"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "@inquirer/prompts": "^8.2.0",
    "ai": "^6.0.49",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "ora": "^9.1.0",
    "simple-git": "^3.30.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
