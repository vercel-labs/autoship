{
  "name": "autoship",
  "version": "0.1.0",
  "description": "CLI tool to automate changeset-based releases with AI-generated descriptions",
  "type": "module",
  "bin": {
    "autoship": "./dist/cli.cjs"
  },
  "files": [
    "dist/cli.cjs"
  ],
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --format=cjs --outfile=dist/cli.cjs",
    "build:sea": "node scripts/build-sea.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "release",
    "changeset",
    "cli",
    "automation",
    "ai",
    "semver",
    "npm"
  ],
  "author": "Vercel Labs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vercel-labs/autoship.git"
  },
  "homepage": "https://github.com/vercel-labs/autoship#readme",
  "bugs": {
    "url": "https://github.com/vercel-labs/autoship/issues"
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.2.0",
    "ai": "^6.0.49",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "ora": "^9.1.0",
    "simple-git": "^3.30.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "esbuild": "0.27.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
